<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#FFFFFFFF"
    tools:context="com.example.hp.cmbsdk_sample.PayActivity">

    <TextView
        android:layout_width="wrap_content"
        android:textSize="16.0sp"
        android:textColor="#000000"
        android:text="参数输入区："
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginLeft="15.0dip"
        android:layout_marginRight="15.0dip"
        android:layout_marginTop="10.0dip"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15.0dip"
            android:layout_marginRight="15.0dip"
            android:layout_marginTop="40.0dip"
            android:singleLine="true"
            android:maxLength="12"
            android:text="aPayUrl:"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="12.0sp" />

        <EditText
            android:id="@+id/apayurl"
            android:textSize="12.0sp"
            android:textColor="#FFAAAAAA"
            android:textColorHint="#FFAAAAAA"
            android:text="@string/payurl"
            android:background="#00000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="83.0dip"
            android:layout_marginRight="15dip"
            android:layout_marginTop="40.0dip"
            android:singleLine="true"
            />
        <View
            android:id="@+id/v1_1"
            android:background="#FF81705A"
            android:layout_width="match_parent"
            android:layout_height="1.0dip"
            android:layout_marginLeft="15.0dip"
            android:layout_marginRight="15.0dip"
            android:layout_below="@id/apayurl"
            android:layout_marginTop="6.0dip"
            >
        </View>

        <TextView
            android:layout_width="63dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15.0dip"
            android:layout_marginRight="15.0dip"
            android:layout_marginTop="80dip"
            android:singleLine="true"
            android:text="appId:"
            android:maxLength="12"
            android:textColor="#000000"
            android:textAlignment="center"
            android:textSize="12.0sp" />

        <EditText
            android:id="@+id/appid_pay"
            android:textSize="12.0sp"
            android:textColor="#FFAAAAAA"
            android:textColorHint="#FFAAAAAA"
            android:text="12306"
            android:background="#00000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="78.0dip"
            android:layout_marginRight="15dip"
            android:layout_marginTop="80dip"
            android:singleLine="true"
            />
        <View
            android:id="@+id/v2_1"
            android:layout_below="@id/appid_pay"
            android:background="#FF81705A"
            android:layout_width="match_parent"
            android:layout_height="1.0dip"
            android:layout_marginLeft="15.0dip"
            android:layout_marginRight="15.0dip"
            android:layout_marginTop="6.0dip"
            >
        </View>

        <TextView
            android:layout_width="63dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15.0dip"
            android:layout_marginRight="15.0dip"
            android:layout_marginTop="120dip"
            android:singleLine="true"
            android:text="method:"
            android:maxLength="12"
            android:textColor="#000000"
            android:textAlignment="center"
            android:textSize="12.0sp" />

        <EditText
            android:id="@+id/method_pay"
            android:textSize="12.0sp"
            android:text="pay"
            android:textColor="#FFAAAAAA"
            android:textColorHint="#FFAAAAAA"
            android:background="#00000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="78.0dip"
            android:layout_marginRight="15dip"
            android:layout_marginTop="120.0dip"
            android:singleLine="true"
            />
        <View
            android:id="@+id/v3_1"
            android:layout_below="@id/method_pay"
            android:background="#FF81705A"
            android:layout_width="match_parent"
            android:layout_height="1.0dip"
            android:layout_marginLeft="15.0dip"
            android:layout_marginRight="15.0dip"
            android:layout_marginTop="6.0dip"
            >
        </View>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:textSize="16.0sp"
        android:textColor="#000000"
        android:text="跳转区："
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginLeft="15.0dip"
        android:layout_marginRight="15.0dip"
        android:layout_marginTop="160.0dip"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/lv5_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:textSize="10dp"
            android:id="@+id/paycall"
            android:text="支付（payCall）"
            android:layout_width="100dp"
            android:layout_height="50dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lv6_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="228dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:textSize="10dp"
            android:id="@+id/checkappinstalled_pay"
            android:text="是否安装招行App"
            android:layout_width="100dp"
            android:layout_height="50dp" />

        <Button
            android:textSize="10dp"
            android:id="@+id/getapiversion_pay"
            android:text="获取SDK版本"
            android:layout_width="100dp"
            android:layout_height="50dp" />
    </LinearLayout>

    <View
        android:layout_marginTop="280.0dip"
        android:background="#FF81705A"
        android:layout_width="match_parent"
        android:layout_height="1.0dip"
        android:layout_marginLeft="15.0dip"
        android:layout_marginRight="15.0dip"
        >
    </View>

    <Button
        android:textSize="10dp"
        android:id="@+id/tranfer_old"
        android:text="切换到老SDK"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        />
</RelativeLayout>

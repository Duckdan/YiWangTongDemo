<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.yiwangtongdemo">

    <application
        android:icon="@mipmap/ic_launcher_cmb"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_cmb"
        android:supportsRtl="true"
        android:exported="true"
        android:launchMode="singleTask">

        <activity android:name=".MainActivity" android:taskAffinity="cmb.pb.sdk_sample.singleTask.affinity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="samplesdk_"/>
            </intent-filter>
        </activity>

        <activity android:name=".PayActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>

        <activity android:name="cmbapi.CMBSchemeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:scheme="samplesdk"/>
            </intent-filter>
        </activity>

    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

</manifest>